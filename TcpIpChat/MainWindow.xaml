<Window x:Class="TcpIpChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpIpChat"
        mc:Ignorable="d"
      Title="Вход в сетевой чат" Height="320" Width="450" MinHeight="320" MinWidth="450" Background="#B0E0E6" FontFamily="Poggy">
    <StackPanel  VerticalAlignment="Center" Margin="5">
        <Label  FontFamily="Comic Sans MS" Content="Оnline chat" Style="{StaticResource  HeaderText}"/>
        <Label FontFamily="Comic Sans MS" Content="Ваше имя" Width="87"/>
        <TextBox x:Name="NameTextBox" Width="228"/>
        <Button FontFamily="Comic Sans MS" x:Name="NewChatButton" Content="жоска создать новый чат" Click="NewChatButton_Click" Background="SteelBlue" Width="208" />
        <Label FontFamily="Comic Sans MS" Content="IP адрес чата" Width="113"/>
        <TextBox x:Name="IPTextBox" Width="220"/>
        <Button FontFamily="Comic Sans MS" x:Name="ConnectButton" Content=" жоска подключиться" Click="ConnectButton_Click" Background="SteelBlue" Width="176" />
    </StackPanel>
</Window>
